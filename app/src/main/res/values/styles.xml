<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowContentTransitions">true</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
    </style>

    <style name="SCBSwitch" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- active thumb & track color (30% transparency) -->
        <item name="colorControlActivated">@color/salmon</item>

        <!-- inactive thumb color -->
        <item name="colorSwitchThumbNormal">@color/salmon
        </item>


        <!-- inactive track color (30% transparency) -->
        <item name="android:colorForeground">@color/salmon
        </item>
    </style>
</resources>